{
    "compilerOptions": {
        "lib": ["es2021"],
        "target": "es2021",
        "module": "commonjs",
        "strict": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": ["./src/*"],
    "exclude": ["./node_modules"]
}