{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "strict": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "resolveJsonModule": true
    },
    "include": ["./src/*"],
    "exclude": ["./node_modules"]
}